{
  "manifest_version": 3,
  "name": "Office DJ",
  "description": "Yandex Music extension",
  "version": "1.0",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://music.yandex.ru/*"],
      "js": ["build/content_script.bundle.js"],
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["build/inject_content.bundle.js", "build/inject_content.bundle.js.map", "build/content_script.bundle.js.map"],
      "matches": ["https://music.yandex.ru/*"]
    }
  ]
}